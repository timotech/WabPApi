@model WabPApi.Models.AboutUs
@{
    ViewData["Title"] = "Edit About Us";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

    <div class="card shadow mb-4">
        <div class="card-header">
            <h3 class="card-title">@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <form asp-action="EditAboutUs">                        
                        <div class="form-group">
                            <textarea asp-for="Description" rows="20" cols="60" class="ckeditor" placeholder="Paste or Enter About Us Details Here"></textarea>
                            @*@Html.TextAreaFor(model => model.Description, new { @class = "ckeditor", placeholder = "Paste or create result using tools above" })*@
                        </div>
                        
                        <div class="form-group">
                            <input type="submit" value="Submit" class="btn btn-success" />
                        </div>

                        @Html.HiddenFor(x => x.Id)
                    </form>
                </div>
            </div>
        </div>
    </div>