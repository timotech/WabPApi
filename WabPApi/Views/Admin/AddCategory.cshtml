@model WabPApi.Models.Categories

@{
    ViewData["Title"] = "Add Category";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header">
        <h3 class="card-title">@ViewData["Title"]</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-5 col-sm-12">
                <form asp-action="AddCategory">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-success" />
                    </div>
                </form>
            </div>
            <div class="col-md-7 col-sm-12">
                <h3>All Categories</h3>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>                            
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var mat in ViewBag.AllCategories)
                        {
                            <tr>
                                <td>@mat.Description</td>                                
                                <td>
                                    <a asp-controller="Admin" asp-action="AddCategory" asp-route-Id="@mat.Id" class="btn btn-outline-success">Edit</a>
                                    &nbsp;
                                    <a asp-controller="Admin" asp-action="DeleteCategory" asp-route-Id="@mat.Id" class="btn btn-outline-success">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>