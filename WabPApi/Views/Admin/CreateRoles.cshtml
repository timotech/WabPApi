@model WabPApi.Models.RolesViewModel

@{
    ViewData["Title"] = "Create Access Levels";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header">
        <h3 class="card-title">@ViewData["Title"]</h3>
    </div>
    <div class="card-body">
        <hr />
        <div class="row">
            <div class="col-md-4 col-sm-12">
                <form asp-action="CreateRoles">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="RoleName" class="control-label"></label>
                        <input asp-for="RoleName" class="form-control" />
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-warning" />
                    </div>
                </form>
            </div>

            <div class="col-md-8 col-sm-12">
                <h3>All Access Levels</h3>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Access Name</th>
                            <th></th>                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in ViewBag.AllRoles)
                        {
                            <tr>
                                <td>@role.Name</td>
                                <td><a asp-controller="Admin" asp-action="EditRoles" asp-route-Id="@role.Id" class="btn btn-warning">Edit</a> 
                                &nbsp; 
                                <a asp-controller="Admin" asp-action="DeleteRoles" asp-route-Id="@role.Id" class="btn btn-warning">Delete</a></td>
                            </tr>                            
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

